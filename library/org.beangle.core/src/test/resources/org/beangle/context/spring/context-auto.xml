<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="autoConfigProcessor" class="org.beangle.context.spring.SpringConfigProcessor" >
		<property name="resource">
			<bean class="org.beangle.context.spring.SpringConfigResource">
				<property name="locations" value="classpath*:spring-config.xml" />
			</bean>
		</property>
	</bean>

	<bean id="spring.common.test" class="org.beangle.context.testbean.TestModule"/>
	
	<bean id="baseTransactionProxy"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		abstract="true">
		<property name="transactionAttributes">
			<props>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="*">PROPAGATION_REQUIRED,readOnly</prop>
			</props>
		</property>
	</bean>


	<bean id="entityDao" parent="baseTransactionProxy">
		<property name="target">
			<bean
				class="org.beangle.context.testbean.TestEntityDao"
				autowire="byName">
			</bean>
		</property>
	</bean>
</beans>
