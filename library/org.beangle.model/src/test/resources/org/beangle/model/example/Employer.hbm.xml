<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.beangle.model.example.ManagerEmployer"
		entity-name="org.beangle.model.example.Employer">
		<id name="id" unsaved-value="null">
			<generator class="assigned"/>
		</id>
		<component name="name">
			<property name="firstName"/>
			<property name="lastName"/>
			<bag name="oldNames">
				<key column="employer_id"/>
				<one-to-many
					entity-name="org.beangle.model.example.OldName"/>
			</bag>
		</component>
		<many-to-one name="contractInfo"/>
		<map name="skills">
			<key column="employer_id"/>
			<map-key type="long" column="skill_type_id"/>
			<many-to-many
				entity-name="org.beangle.model.example.Skill" column="skill_id"/>
		</map>
	</class>
</hibernate-mapping>
