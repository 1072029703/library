<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- 业务规则表 -->
<hibernate-mapping package="org.beangle.rule.model" >
	<class name="BusinessRule" entity-name="org.beangle.rule.Rule">
		<id name="id" unsaved-value="null">
			<generator class="org.beangle.model.persist.hibernate.support.TableSeqGenerator"/>
		</id>
		<property name="name" not-null="true" length="100"/>
		<property name="createdAt"  not-null="true"/>
		<property name="updatedAt" not-null="true"/>	
		<property name="enabled" not-null="true"/>
		
		<property name="business" not-null="true"/>
		<property name="description" />
		<property name="factory" not-null="true"/>
		<property name="serviceName" not-null="true"/>
		<set name="params" inverse="true" cascade="all-delete-orphan">
			<key column="rule_id"/>
			<one-to-many class="org.beangle.rule.Parameter"/>
		</set>	
	</class>
</hibernate-mapping>
