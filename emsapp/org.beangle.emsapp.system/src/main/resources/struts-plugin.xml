<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<bean type="org.apache.struts2.views.TagLibrary" name="bs" class="org.beangle.emsapp.security.tag.SecurityTagLibrary" />
	
	<package name="org.beangle.emsapp.portal.action" extends="beangle">
		<action name="login" class="org.beangle.emsapp.portal.action.LoginAction" method="index">
			<result name="home" type="redirectAction">home!index</result>
			<result name="failure" type="freemarker">/login.ftl</result>
		</action>
		
		<action name="logout" class="org.beangle.emsapp.portal.action.LogoutAction" method="index">
			<result name="success" type="redirectAction">login</result>
		</action>
	</package>
	
	<package name="org.beangle.emsapp.captcha.action" extends="beangle" namespace="/captcha">
		<action name="image" class="org.beangle.emsapp.captcha.action.ImageAction" method="index">
			<result  type="stream">
				<param name="contentType">image/jpeg</param>  
				<param name="inputName">inputStream</param>
				<param name="allowCaching">false</param>  
			</result>
		</action>
	</package>
</struts>
